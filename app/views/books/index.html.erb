<div class="title">
  <h1>Books</h1>
</div>

<div class="table">
  <table>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th>
    </tr>
    <% @books.each do |book| %>
    <tr class="left">
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td>
        <span><%= link_to "Show", book_path(book.id) %></span>
        <span><%= link_to "Edit", edit_book_path(book.id) %></span>
        <span><%= link_to "Destroy", book_path(book.id), method: :delete, data: {confirm: "Are you sure?"} %></span>
      </td>
    </tr>
    <% end %>
  </table>
</div>

<div class="post">
  <h2>New book</h2>
  
  
  <!-- form_with部分 -->
  <%= form_with model:@book, local: true do |f| %>
  
    <% if @book.errors.any? %>
     <div id="error_explanation">
       <h2><%= pluralize(@book.errors.count, "error" )%> prohibited this product from being saved:</h2>
       <ul>
         <%= @book.errors.full_messages.each do |message| %>
         <li><%= message %></li>
         <% end %>
       </ul>
     </div>
    <% end %>
  
    <h4>Title</h4>
    <%= f.text_field :title %>
    
    <h4>Body</h4>
    <%= f.text_area :body %>
    
    <span class="button"><%= f.submit 'Create Book' %></span>
    
  <% end %>
  
</div>

