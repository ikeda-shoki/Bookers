<div class="title">
  <h1>Books</h1>
</div>

<div class="table">
  <% @books.each do |book| %>
  <table>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th>
    </tr>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td>
        <span><%= link_to "show", book_path(book.id) %></span>
        <span><%= link_to "edit", edit_book_path(book.id) %></span>
        <span><%= link_to "destoroy", book_path(book.id), method: :delete %></span>
      </td>
    </tr>
  </table>
  <% end %>
</div>

<div class="post">
  <h2>New book</h2>
  <!-- form_with部分 -->
  <%= form_with model:@book, local: true do |f| %>
  
    <h4>Title</h4>
    <%= f.text_field :title %>
    
    <h4>Body</h4>
    <%= f.text_area :body %>
    
    <%= f.submit 'Create Book' %>
    
  <% end %>
  
</div>

