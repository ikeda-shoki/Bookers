<h1>Editing Book</h1>

<%= form_with model:@book, local: true do |f| %>

    <% if @book.errors.any? %>
         <div id="error_explanation">
           <h2><%= pluralize(@book.errors.count, "error" )%> prohibited this product from being saved:</h2>
           <ul>
             <%= @book.errors.full_messages.each do |message| %>
             <li><%= message %></li>
             <% end %>
           </ul>
         </div>
    <% end %>
    
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <span class="button"><%= f.submit 'Update Book'%></span>
  
  <span><%= link_to 'Show', book_path(@book.id)%></span>|<span><%= link_to 'Back', books_path %></span>
  
<% end %>